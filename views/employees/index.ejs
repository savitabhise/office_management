<h1 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent" data-aos="fade-down">
  Employees
</h1>

<div class="flex justify-end mb-6">
  <a href="/employees/new" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-5 py-2 rounded-lg shadow hover:opacity-90 transition flex items-center space-x-2" data-aos="fade-left">
    <span>Add Employee</span>
  </a>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  <% employees.forEach(e => { %>
    <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transition" data-aos="fade-up">
      <h2 class="text-xl font-bold mb-2"><%= e.name %></h2>
      <p class="text-gray-600"><strong>Email:</strong> <%= e.email %></p>
      <p class="text-gray-600"><strong>Job:</strong> <%= e.jobTitle || 'N/A' %></p>
      <p class="text-gray-600"><strong>Department:</strong> <%= e.department ? e.department.name : 'N/A' %></p>
      <p class="text-gray-600"><strong>Location:</strong> <%= e.city %>, <%= e.state %>, <%= e.country %></p>

      <div class="mt-4 flex space-x-4 text-gray-600">
        <!-- View -->
        <a href="/employees/<%= e._id %>" class="hover:text-blue-600 transition" title="View">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M1.5 12s3.75-7.5 10.5-7.5S22.5 12 22.5 12s-3.75 7.5-10.5 7.5S1.5 12 1.5 12z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
        </a>

        <!-- Edit -->
        <a href="/employees/<%= e._id %>/edit" class="hover:text-yellow-600 transition" title="Edit">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z" />
          </svg>
        </a>

        <!-- Delete -->
        <form action="/employees/<%= e._id %>?_method=DELETE" method="POST" class="inline">
          <button type="submit" class="hover:text-red-600 transition" title="Delete" onclick="return confirm('Delete this employee?')">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
              <line x1="10" y1="11" x2="10" y2="17"></line>
              <line x1="14" y1="11" x2="14" y2="17"></line>
            </svg>
          </button>
        </form>
      </div>
    </div>
  <% }) %>
</div>
