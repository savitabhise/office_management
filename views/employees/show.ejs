<h1 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent" data-aos="fade-down">
  Employee Details
</h1>

<div class="max-w-lg mx-auto bg-white rounded-xl shadow-lg p-8 space-y-4" data-aos="fade-up">
  <h2 class="text-2xl font-bold mb-2"><%= employee.name %></h2>
  <p class="text-gray-600"><strong>Email:</strong> <%= employee.email %></p>
  <p class="text-gray-600"><strong>Job Title:</strong> <%= employee.jobTitle || 'N/A' %></p>
  <p class="text-gray-600"><strong>Department:</strong> <%= employee.department ? employee.department.name : 'N/A' %></p>
  <p class="text-gray-600"><strong>Supervisor:</strong> <%= employee.supervisor ? employee.supervisor.name : 'N/A' %></p>
  <p class="text-gray-600"><strong>Location:</strong> <%= employee.city %>, <%= employee.state %>, <%= employee.country %></p>

  <div class="mt-6 flex space-x-4 text-gray-600">
    <a href="/employees/<%= employee._id %>/edit" class="hover:text-yellow-600 transition">
      <i data-lucide="pencil"></i>
    </a>
    <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" class="inline">
      <button type="submit" class="hover:text-red-600 transition"
        onclick="return confirm('Delete this employee?')">
        <i data-lucide="trash-2"></i>
      </button>
    </form>
    <a href="/employees" class="hover:text-blue-600 transition">
      <i class="lucide lucide-arrow-left-circle"></i>
    </a>
  </div>
</div>
