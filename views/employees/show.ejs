<h1 class="text-2xl font-bold mb-4">Employee Details</h1>

<div class="bg-white shadow rounded p-6 space-y-4">
  <div>
    <strong>Name:</strong> <%= employee.name %>
  </div>
  <div>
    <strong>Email:</strong> <%= employee.email %>
  </div>
  <div>
    <strong>Job Title:</strong> <%= employee.jobTitle || 'N/A' %>
  </div>
  <div>
    <strong>Department:</strong> <%= employee.department ? employee.department.name : 'N/A' %>
  </div>
  <div>
    <strong>Supervisor:</strong> <%= employee.supervisor ? employee.supervisor.name : 'N/A' %>
  </div>
  <div>
    <strong>Country:</strong> <%= employee.country || 'N/A' %>
  </div>
  <div>
    <strong>State:</strong> <%= employee.state || 'N/A' %>
  </div>
  <div>
    <strong>City:</strong> <%= employee.city || 'N/A' %>
  </div>
</div>

<div class="mt-6 space-x-2">
  <a href="/employees/<%= employee._id %>/edit" class="bg-yellow-500 text-white px-4 py-2 rounded">Edit</a>

  <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" style="display:inline">
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded"
      onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
  </form>

  <a href="/employees" class="bg-gray-400 text-white px-4 py-2 rounded">Back to Employees</a>
</div>
