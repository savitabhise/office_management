<h1 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent" data-aos="fade-down">
  Edit Employee
</h1>

<form action="/employees/<%= employee._id %>?_method=PUT" method="POST" class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow space-y-6" data-aos="fade-up">
  <!-- Same inputs as new.ejs, just with value="<%= employee.field %>" -->
  <div>
    <label class="block mb-2 font-semibold">Name</label>
    <input type="text" name="name" value="<%= employee.name %>" required class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-purple-500 outline-none">
  </div>
  ...
  <div class="flex justify-between">
    <a href="/employees" class="px-5 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500 transition">Cancel</a>
    <button type="submit" class="px-5 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg shadow hover:opacity-90 transition">Update</button>
  </div>
</form>

<script src="/js/location-dropdowns.js"></script>
